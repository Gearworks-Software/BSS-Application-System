{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}